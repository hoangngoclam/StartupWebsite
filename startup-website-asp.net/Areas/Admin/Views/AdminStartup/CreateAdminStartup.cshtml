@model startup_website_asp.net.Models.EF.Startup

@{
    ViewBag.Title = "Tạo Startup";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-inbox bg-blue"></i>
                <div class="d-inline">
                    <h5>Tạo startup</h5>
                    <p>Tạo mới 1 startup</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <nav class="breadcrumb-container" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="../index.html"><i class="ik ik-home"></i></a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a href="/Admin/Startup/StartupList">Danh sách startup</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Tạo startup
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="row">
	<div class="col-md-12">
		@using (Html.BeginForm("CreateAdminStartup", "AdminStartup", FormMethod.Post))
		{
			<div class="card">
				<div class="card-body">

					@Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Startup</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Tên</span>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control " } })
                            </div>
                        </div>
                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Link logo</span>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.LogoUrl, new { htmlAttributes = new { @class = "form-control " } })
                            </div>
                        </div>
                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Trạng thái</span>
                            </div>
                            <div class="col-md-8">
                                @Html.DropDownList("StartupTypeId", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Mô tả</span>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control " } })
                            </div>
                        </div>

                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Slogan</span>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Slogan, new { htmlAttributes = new { @class = "form-control  " } })
                            </div>
                        </div>

                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Địa chỉ</span>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control  " } })
                            </div>
                        </div>

                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Số điện thoại</span>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control  " } })
                            </div>
                        </div>


                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Link Facebook</span>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.FanpageLink, new { htmlAttributes = new { @class = "form-control  " } })
                            </div>
                        </div>

                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Link Youtube</span>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.YoutubeLink, new { htmlAttributes = new { @class = "form-control  " } })
                            </div>
                        </div>


                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Link Instagram</span>
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.InstagramLink, new { htmlAttributes = new { @class = "form-control  " } })
                            </div>
                        </div>
                        
                        <div class="form-group form-row">
                            <div class="col-md-1 d-flex align-items-center">
                                <span>Trạng thái</span>
                            </div>
                            <div class="col-md-8">
                                @Html.DropDownList("Status", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
				</div>
				<div class="card-footer text-right">
					<button type="submit" class="btn btn-dark mr-2">Thêm</button>
				</div>
			</div>
		}

	</div>
</div>

