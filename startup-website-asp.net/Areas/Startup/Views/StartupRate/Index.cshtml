@model IEnumerable<startup_website_asp.net.Models.EF.Rate>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Startup/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-inbox bg-blue"></i>
                <div class="d-inline">
                    <h5>Đánh giá sản phẩm</h5>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <nav class="breadcrumb-container" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index","Home")"><i class="ik ik-home"></i></a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a href="@Url.Action("Index","StartupRate")">Danh sách đánh giá</a>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header justify-content-between">
                <h3>Danh sách đánh giá</h3>
            </div>

            <div class="card-body">
                <table id="data_table" class="table">
                    <thead>
                        <tr>
                            <th>
                                STT
                            </th>
                            <th>
                                Sản phẩm
                            </th>
                            <th>
                                Tên sản phẩm
                            </th>
                            <th>
                                Người đánh giá
                            </th>
                            <th>
                                Thời gian
                            </th>
                            <th>
                                Nội dung
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr id="item-@item.RateId">
                            <td></td>
                            <td><img src="@item.Product.MainImage" width="150" alt="Alternate Text" /></td>
                            <td>
                                @item.Product.Name
                            </td>
                            <td>
                                @item.OrderDetail.Order.Customer.Name
                            </td>
                            <td>
                                @item.CreatedAt
                            </td>
                            <td>
                                @item.Content
                            </td>
                            <td>
                                <div class="table-actions">
                                    <a href="@Url.Action("Details","StartupRate", new { id =@item.RateId})"><i class="ik ik-edit-2"></i></a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

