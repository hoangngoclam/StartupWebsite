@model startup_website_asp.net.Models.StartupRegisterViewModel
@{
    Layout = null;
}

<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Đăng ký thành viên</title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="icon" type="image/png" href="~/Content/images/favicon.png">

    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800" rel="stylesheet">

    <link rel="stylesheet" href="~/Areas/Admin/Assets/plugins/bootstrap/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/Areas/Admin/Assets/plugins/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Assets/plugins/fontawesome-free/css/all.min.css">

    <link rel="stylesheet" href="~/Areas/Admin/Assets/plugins/ionicons/dist/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Assets/plugins/icon-kit/dist/css/iconkit.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Assets/plugins/perfect-scrollbar/css/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/Areas/Admin/Assets/dist/css/theme.min.css">

    <script src="../src/js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <div class="auth-wrapper">
        <div class="container-fluid h-100">
            <div class="row flex-row h-100 bg-white">
                <div class="col-xl-8 col-lg-6 col-md-5 p-0 d-md-block d-lg-block d-sm-none d-none">
                    <div class="lavalite-bg" style="background-image: url('/Areas/Admin/Assets/img/auth/register-bg.jpg')">
                        <div class="lavalite-overlay"></div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6 col-md-7 my-auto p-0">
                    <div class="authentication-form mx-auto pt-4 pb-2">
                        <div class="logo-centered mb-4">
                            <a href="#"><img src="~/Content/images/logo2.png" alt="" width="100"></a>
                        </div>
                        <h3>Đăng ký thành viên</h3>
                        @*<p>Join us today! It takes only few steps</p>*@
                        @using (Html.BeginForm("Register", "LoginAndRegister", FormMethod.Post))
                        {
                            @Html.ValidationSummary(false, " ", "Error!")
                            <div class="form-group">
                                @*<input type="text" class="form-control" placeholder="Email" required="">*@
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "nameAccountAdmin", @autofocus = "autofocus", @placeholder = "Tên tài khoản" })

                                <i class="ik ik-user"></i>
                            </div>
                            <div class="form-group">
                                @*<input type="password" class="form-control" placeholder="Mật khẩu" required="">*@
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "password", @placeholder = "Mật khẩu", @type = "password" })
                                <i class="ik ik-lock"></i>
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(model => model.ConfirmpPassword, new { @class = "form-control", @id = "password", @placeholder = "Xác nhận mật khẩu", @type = "password" })
                                <i class="ik ik-eye-off"></i>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "fullnameAdmin", @autofocus = "autofocus", @placeholder = "Họ tên" })

                                <i class="ik ik-user-plus"></i>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @id = "addressAdmin", @autofocus = "autofocus", @placeholder = "Địa chỉ" })

                                <i class="ik ik-home"></i>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", @id = "birthdayAdmin", @autofocus = "autofocus", @placeholder = "Ngày sinh (vd: 12/08/1998)" })

                                <i class="ik ik-tag"></i>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @id = "phoneNumberAdmin", @autofocus = "autofocus", @placeholder = "Số điện thoại" })
                                <i class="ik ik-phone"></i>
                            </div>
                            <div class="sign-btn text-center">
                                <button type="submit" class="btn btn-theme">Đăng Ký</button>
                            </div>
                        }
                        <div class="register">
                            <p>Bạn đã có tài khoản trước đó? <a href="/Startup/LoginAndRegister/Login">Đăng Nhập</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="../src/js/vendor/jquery-3.3.1.min.js"><\/script>')</script>
    <script src="~/Areas/Admin/Assets/plugins/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/Areas/Admin/Assets/plugins/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Assets/plugins/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
    <script src="~/Areas/Admin/Assets/plugins/screenfull/dist/screenfull.js"></script>
    <script src="~/Areas/Admin/Assets/dist/js/theme.js"></script>
