@model startup_website_asp.net.Models.EF.StartupCategory

@{
	ViewBag.Title = "Sửa Danh Mục";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
	<div class="row align-items-end">
		<div class="col-lg-8">
			<div class="page-header-title">
				<i class="ik ik-inbox bg-blue"></i>
				<div class="d-inline">
					<h5>Danh mục sản phẩm trang Startup</h5>
					<p>Thêm, chỉnh sửa danh mục sản phẩm trang Startup</p>
				</div>
			</div>
		</div>
		<div class="col-lg-4">
			<nav class="breadcrumb-container" aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="@Url.Action("Index","Home")"><i class="ik ik-home"></i></a>
					</li>
					<li class="breadcrumb-item active">
						<a href="@Url.Action("ListStartupCategory","StartupCategory")">Danh sách danh mục</a>
					</li>
					<li class="breadcrumb-item">
						<a href="">Chỉnh sửa</a>
					</li>

				</ol>
			</nav>
		</div>
	</div>
</div>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header d-flex justify-content-between align-items-center">
					<h3>Thêm danh mục</h3>

				</div>
				<div class="card-body">
					<form class="forms-sample"  method="post">
						@Html.HiddenFor(model => model.StartupCategoryId)
						<div class="form-group">							
							<div class="row">
								@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-3 col-lg-2 pr-0" })
								@Html.EditorFor(model => model.Name, new { htmlAttributes = new{ @class = "col-md-7 col-lg-6 form-control ml-3 mr-3" } })
								@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">							
							<div class="row">
								@Html.LabelFor(model => model.MetaTitle, htmlAttributes: new { @class = "col-md-3 col-lg-2 pr-0" })
								@Html.EditorFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "col-md-7 col-lg-6 form-control ml-3 mr-3" } })
								@Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">							
							<div class="row">
								@Html.LabelFor(model => model.DisplayOrder, htmlAttributes: new { @class = "col-md-3 col-lg-2 pr-0" })
								@Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "col-md-7 col-lg-6 form-control ml-3 mr-3" } })
								@Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">							
							<div class="row">
								@Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "col-md-3 col-lg-2 pr-0" })
								@Html.DropDownListFor(model => model.Status, new SelectList(new string[] { "Ẩn", "Hiện" }), new { @class = "form-control col-md-7 col-lg-6 ml-3 mr-3 " })
								@Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
							</div>
						</div>

						<div class="form-group">							
							<div class="row">
								@Html.LabelFor(model => model.SeoTitle, htmlAttributes: new { @class = "col-md-3 col-lg-2 pr-0" })
								@Html.EditorFor(model => model.SeoTitle, new { htmlAttributes = new { @class = "col-md-7 col-lg-6 form-control ml-3 mr-3" } })
								@Html.ValidationMessageFor(model => model.SeoTitle, "", new { @class = "text-danger" })
							</div>
						</div>
		
					</form>
				</div>
				<div class="card-footer text-right">
					<a href="javascript:history.back()" class="btn btn-light" style="width:100px">Hủy</a>
					<button type="submit" class="btn btn-dark mr-2" style="width:100px">Sửa</button>
				</div>
			</div>
		</div>
	</div>
}
