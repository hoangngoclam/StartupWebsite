@model startup_website_asp.net.ViewModels.CustomerRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!-- Meta Tag -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name='copyright' content=''>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Title Tag  -->
    <title>Đăng ký tài khoản</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/Content/images/favicon.png">
    <!-- Web Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">

    <!-- StyleSheet -->
    <link rel="stylesheet" href="~/Content/style.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <link href="~/Content/css/bootstrap-social.css" rel="stylesheet" />
    <!-- Magnific Popup -->
    <link rel="stylesheet" href="~/Content/css/magnific-popup.min.css">
    <!-- Font Awesome -->
    <!--<link rel="stylesheet" href="~/Content/css/font-awesome.css"> -->
    <link href="~/Content/fontawesome/css/all.css" rel="stylesheet" />

    <!-- Eshop StyleSheet -->
    <link rel="stylesheet" href="~/Content/css/reset.css">
    <link rel="stylesheet" href="~/Content/css/settings.css">

    <link rel="stylesheet" href="~/Content/css/responsive.css">

    <link rel="stylesheet" href="~/Content/css/Pages/LoginAndRegister.css">

</head>
<style>
    .validation-summary-errors ul {
        border: 1px solid #dc3545;
        padding: 5px;
        padding-left: 3px;
        padding-bottom: 6px;
        color: #dc3545;
        border-radius: 3px;
        margin-bottom: 5px;
    }
</style>
<body class="js">
    <div class="register-area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-11 col-md-7 col-lg-6 mt-5 pt-3 pb-5 pl-4 pr-4 surrounded">
                    <h3 class="title">Đăng kí tài khoản</h3>

                    <hr>

                    @using (Html.BeginForm("Register", "CustomerLoginAndRegister", FormMethod.Post))
                    {
                        @Html.ValidationSummary(false, " ", "Error!")
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="nameAccount">Tên tài khoản/ Email</label>
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "userName", @autofocus = "autofocus", @placeholder = "Nhập tên tài khoản" })
                                </div>
                                <div class="form-group">
                                    <label for="password">Mật khẩu</label>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "password", @placeholder = "Nhập mật khẩu từ 6 đến 32 kí tự", @type = "password" })

                                </div>

                                <div class="form-group">
                                    <label for="password">Nhập lại mật khẩu</label>
                                    @Html.PasswordFor(model => model.ConfirmpPassword, new { @class = "form-control", @id = "confirmpPassword", @placeholder = "Nhập mật khẩu Lại", @type = "password" })

                                </div>
                                @*<div class="form-group">
                                    <label for="nameAccount">Ngày sinh</label>
                                    @Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", @id = "birthday", @autofocus = "autofocus", @placeholder = "Ex: 12/08/1998" })

                                </div>*@
                            </div>
                            <div class="col-6">

                                <div class="form-group">
                                    <label for="nameAccount">Họ tên</label>

                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "nameAccount", @autofocus = "autofocus", @placeholder = "Nhập họ tên" })

                                </div>
                                <div class="form-group">
                                    <label for="nameAccount">Số điện thoại</label>
                                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @id = "phoneNumber", @autofocus = "autofocus", @placeholder = "Nhập số điện thoại" })

                                </div>
                                @*<div class="form-group">
                                    <label for="nameAccount">Địa chỉ</label>
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @id = "address", @autofocus = "autofocus", @placeholder = "Nhập địa chỉ" })
                                </div>*@
                                <div class="form-group">
                                    <label for="nameAccount">Giới tính</label>

                                    <div class="form-control pl-1">
                                        <div class="form-check form-check-inline">
                                            @Html.RadioButtonFor(model => model.Gender, "Nam")
                                            <label class="form-check-label pl-1" for="inlineRadio2">Nam</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            @Html.RadioButtonFor(model => model.Gender, "Nữ")
                                            <label class="form-check-label pl-1" for="inlineRadio2">Nữ</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-warning w-100 mt-2">Đăng kí</button>

                    }
                    <a href="/trang-chu" class="float-left mt-2 next_to_register">< Trở lại trang chủ</a>
                    <a href="/dang-nhap" class="float-right mt-2 next_to_login">Đăng nhập tài khoản ></a>
                </div>
            </div>
        </div>
    </div>
    <!-- /End Footer Area -->
    <!-- Jquery -->
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/jquery-migrate-3.0.0.js"></script>
    <script src="~/Content/js/jquery-ui.min.js"></script>
    <!-- Popper JS -->
    <script src="~/Content/js/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- Color JS -->
    <script src="~/Content/js/colors.js"></script>
    <!-- Slicknav JS -->
    <script src="~/Content/js/slicknav.min.js"></script>
    <!-- Owl Carousel JS -->
    <script src="~/Content/js/owl-carousel.js"></script>
    <!-- Magnific Popup JS -->
    <script src="~/Content/js/magnific-popup.js"></script>
    <!-- Waypoints JS -->
    <script src="~/Content/js/waypoints.min.js"></script>
    <!-- Countdown JS -->
    <script src="~/Content/js/finalcountdown.min.js"></script>
    <!-- Nice Select JS -->
    <script src="~/Content/js/nicesellect.js"></script>
    <!-- Flex Slider JS -->
    <script src="~/Content/js/flex-slider.js"></script>
    <!-- ScrollUp JS -->
    <script src="~/Content/js/scrollup.js"></script>
    <!-- Onepage Nav JS -->
    <script src="~/Content/js/onepage-nav.min.js"></script>
    <!-- Easing JS -->
    <script src="~/Content/js/easing.js"></script>
    <!-- Active JS -->
    <script src="~/Content/js/active.js"></script>
</body>
</html>

