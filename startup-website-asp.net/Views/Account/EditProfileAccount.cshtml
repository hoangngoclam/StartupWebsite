
@{
    ViewBag.Title = "Chỉnh Sửa Thông Tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Customer = ViewBag.Customer;
    var BirthDay = ViewBag.BirthDay;

    var day = "1";
    var month = "1";
    var year = "1997";

    if (BirthDay[0] != "")
    {
        day = BirthDay[1];
        month = BirthDay[0];
        year = BirthDay[2].Substring(0, 4);
    }
}

