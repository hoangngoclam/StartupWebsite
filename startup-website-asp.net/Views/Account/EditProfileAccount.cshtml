        <div class="row">
            <div class="col-12 col-md-3 select-menu-account">
                <div class="order-details">
                    <!-- Order Widget -->
                    <div class="single-widget">
                        <div class="content">
                            <div class="avata-account">
                            </div>
                            <ul class="list-menu">
                                <a href="/Account/EditProfileAccount">
                                    <li class="last my-account">
