                                            {
                                                <option name="gender" value="@Model.Gender" selected="selected">@Model.Gender</option>
                                                <option>Nữ</option>
                                            }
                                            else
                                            {
                                                <option name="gender" value="@Model.Gender" selected="selected">@Model.Gender</option>
                                                <option>Nam</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="day-of-birth">Ngày sinh<span>*</span></label>
                                        <div id="day-of-birth" class="row">
