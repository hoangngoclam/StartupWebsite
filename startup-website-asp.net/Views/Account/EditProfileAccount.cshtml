                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="fullname">Họ tên<span>*</span></label>
                                        <input id="fullname" type="text" name="name" placeholder=""
                                               required="required" value="@Model.Name">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="email">Email<span>*</span></label>
                                        <input type="email" name="email" id="email" placeholder=""
                                               required="required" value="@Model.Email">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="address">Địa chỉ<span>*</span></label>
                                        <input id="address" type="text" name="address" placeholder=""
                                               required="required" value="@Model.Address">
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="phone-number">Số điện thoại<span>*</span></label>
                                        <input id="phone-number" type="number" name="phonenumber" placeholder=""
                                               required="required" value="@Model.PhoneNumber">
                                    </div>
                                </div>

