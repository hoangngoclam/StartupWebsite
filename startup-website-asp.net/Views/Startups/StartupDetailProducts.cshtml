
@{
	ViewBag.Title = "Danh Sách Sản Phẩm";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var startup = ViewBag.startup;
	var categories = ViewBag.categories;
	var productList = ViewBag.productList;
}
@section css{
	<link href="~/Content/css/Pages/StartupDetail.css" rel="stylesheet" />
		<link href="~/Content/css/components/product-card.css" rel="stylesheet" />
}

<div class="startup-page">
	<div class="startup-page-header">
		<img src="@startup.CoverUrl" alt="startup-cover" />
		<div class="cover-overlay">
			<div class="container">
				<div class="row">
					<div class="col-lg-4 offset-lg-3">
						<h1>@startup.Name</h1>
						<div>
							<span>@@hellostartup</span>&nbsp;•&nbsp;
							<span><i class="ti-location-pin"></i>&nbsp;@startup.Address</span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="startup-info">
			<div class="container">
				<div class="row align-items-center">
					<div class="startup-logo-wrapper col-lg-3">
						<div class="startup-logo">
							<img src="@startup.LogoUrl" alt="startup-logo" />
						</div>
					</div>
					<div class="startup-desc col-lg-4">
						<p>
							@startup.Slogan
						</p>
					</div>
					<div class="startup-meta col-lg-3">
						@*<div>
			<b>5.0</b>
			<span>Stars</span>
		</div>*@
						@*<div>
							<b></b>
							<span>lượt đăng ký</span>
						</div>
						<div>
							<b>@startup.ProductNumber</b>
