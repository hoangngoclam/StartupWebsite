						</div>*@
					</div>
					@*<div class="col-lg-2">
						<button class="btn btn-primary">Theo dõi</button>
					</div>*@
				</div>

			</div>
		</div>

	</div>
	<div class="startup-menu">
		<div class="container">
			<ul class="startup-menu-list">
				<li class="startup-menu-item ">
					<a href="/Startups/StartupDetail/@startup.StartupId">Giới thiệu</a>
				</li>
				<li class="startup-menu-item active">
					<a href="/Startups/StartupDetailProducts/@startup.StartupId">Sản phẩm</a>
				</li>
				@*<li class="startup-menu-item">
					<a href="/Startups/StartupDetailBlogs/@startup.StartupId">Blog</a>
				</li>*@
			</ul>
		</div>
	</div>
	<div class="startup-content">
		<section class="shop">
			<div class="container">
				<div class="row">
					<div class="col-lg-3 col-md-4 col-12">
						<div class="shop-sidebar">
							<!-- Single Widget -->
							<div class="single-widget category">
								<h3 class="title">Danh mục sản phẩm</h3>
								<ul class="categor-list">
									@foreach (var category in categories)
									{
										<li>
											<a href="@Url.Action("StartupDetailProducts","Startups",new { id=startup.StartupId,categoryId=category.StartupCategoryId })">
												@category.Name
											</a>
										</li>
									}
									
								</ul>
							</div>
