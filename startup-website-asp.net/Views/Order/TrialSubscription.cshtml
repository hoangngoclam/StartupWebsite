@model startup_website_asp.net.ViewModels.TrialSubscriptionViewModel
@{
    ViewBag.Title = "Đăng Ký Sản Phẩm Dùng Thử";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bread-inner">
                    <ul class="bread-list">
                        <li><a href="@Url.Action("Index","Home")">Trang chủ<i class="ti-arrow-right"></i></a></li>
                        <li class="active"><a href="blog-single.html">Đăng ký dùng thử sản phẩm</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->
<section class="shop checkout section">
    <form class="form" method="post" action="@Url.Action("TrialSubscription","Order")">
        <input type="hidden" name="StartupId" value="@Model.StartupId" />
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-12">
                    <div class="checkout-form">
                        <h2>Thông tin đăng ký</h2>
                        <p>Vui lòng điền đầy đủ thông tin liên hệ</p>
                        <!-- Form -->

                        <input type="hidden" name="ProductId" value="@Model.ProductId" />
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Họ và tên<span>*</span></label>
                                    <input type="text" name="Name" value="@Model.Name" required="required"> @*placeholder="Nguyễn Văn A"*@
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Số điện thoại<span>*</span></label>
                                    <input type="number" name="PhoneNumber" value="@Model.PhoneNumber" required="required"> @*placeholder="09*****808"*@
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Địa chỉ nhận hàng<span>*</span></label>
                                    <input type="text" name="Address" value="@Model.Address" required="required"> @*placeholder="31A Trần Khánh Dư *** Đà lạt"*@
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Địa chỉ email</label>
                                    <input type="email" name="Email" value="@Model.Email"> @*placeholder="166***gmail.com"*@
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Ghi chú của bạn</label>
                                    <textarea name="Note" value="@Model.Note "></textarea> @*placeholder="166***gmail.com"*@
                                </div>
                            </div>
                        </div>

                        <!--/ End Form -->
                    </div>
                </div>
                <div class="col-lg-4 col-12">
                    <div class="order-details">
                        <!-- Order Widget -->
                        <div class="single-widget">
                            <h2>Đăng ký dùng thử sản phẩm</h2>
                            <div class="content">
                                <ul>
                                    <li>Bên chúng tôi sẽ liên lạc sớm nhất đến bạn để xác nhận</li>
                                </ul>
                            </div>
                        </div>
                        <!--/ End Order Widget -->
                        <!-- Button Widget -->
                        <div class="single-widget get-button">
                            <div class="content">
                                <div class="button">
                                    <button class="btn">Đăng ký dùng thử</button>
                                </div>
                            </div>
                        </div>
                        <!--/ End Button Widget -->
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

